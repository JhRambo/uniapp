{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "买了呀",
				"enablePullDownRefresh": true,
				"navigationBarBackgroundColor": "#ffffff",
				"navigationStyle": "custom",	//自定义导航栏
				"app-plus": {
					"titleNView": {
						"buttons": [{
								"float": "left",
								"fontSrc": "../static/iconfont.ttf",
								"text": "\ue62d"
							},
							{
								"float": "right",
								"fontSrc": "../static/iconfont.ttf",
								"text": "\ue711"
							}
						]
					}
				}
			}
		}, {
			"path": "pages/cate/cate",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false,
				"navigationBarBackgroundColor": "#ffffff",
				"navigationStyle": "custom",	//自定义导航栏
				"app-plus": {
					"titleNView": {
						"searchInput": {
							"disabled": true,
							"placeholderColor": "#636263",
							"borderRadius": "15px",
							"placeholder": "请输入搜索内容",
							"align": "left",
							"autoFocus": true,
							"backgroundColor": "#F7F7F7"
						}
					}
				}
			}

		}, {
			"path": "pages/cart/cart",
			"style": {
				"scrollIndicator": "none", //去除滚动条
				"navigationBarTitleText": "购物车",
				"navigationStyle": "custom",	//自定义导航栏
				"app-plus": {
					"titleNView": false
				}
			}

		}, {
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"app-plus": {
					"titleNView": false
				}
			}

		}, {
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false,
				"navigationBarBackgroundColor": "#ffffff",
				"navigationStyle": "custom",	//自定义导航栏
				"app-plus": {
					"titleNView": {
						"searchInput": {
							"placeholderColor": "#636263",
							"borderRadius": "15px",
							"placeholder": "请输入搜索内容",
							"align": "left",
							"autoFocus": true,
							"backgroundColor": "#F7F7F7"
						},
						"buttons": [{
							"color": "#636263",
							"float": "right",
							"fontSize": "15px",
							"width": "60px",
							"text": "搜索"
						}]
					}
				}
			}
		}, {
			"path": "pages/search-list/search-list",
			"style": {
				"navigationBarTitleText": "搜索结果",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/details/details",
			"style": {
				"navigationBarTitleText": "商品详情",
				"scrollIndicator": "none", //去除滚动条
				"app-plus": {
					"titleNView": {
						"type": "transparent",
						"buttons": [{
								"type": "menu"
							},
							{
								"type": "share"
							}
						]
					}
				}
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#49BDFB",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/image/index.png",
			"selectedIconPath": "static/image/index-fill.png",
			"text": "首页"
		}, {
			"pagePath": "pages/cate/cate",
			"iconPath": "static/image/cate.png",
			"selectedIconPath": "static/image/cate-fill.png",
			"text": "分类"
		}, {
			"pagePath": "pages/cart/cart",
			"iconPath": "static/image/cart.png",
			"selectedIconPath": "static/image/cart-fill.png",
			"text": "购物车"
		}, {
			"pagePath": "pages/mine/mine",
			"iconPath": "static/image/mine.png",
			"selectedIconPath": "static/image/mine-fill.png",
			"text": "我的"
		}]
	}

}
